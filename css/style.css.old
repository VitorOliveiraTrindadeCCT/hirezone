/* Reset básico */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Fonte padrão e fundo geral */
body {
  font-family: Arial, sans-serif;
  background-color: #f7f7f7;
  color: #333;
  line-height: 1.6;
  padding: 20px;
}

/* Navbar */
.navbar {
  background-color: #0077B5;
  padding: 10px 0;
}

.navbar ul {
  display: flex;
  list-style: none;
  justify-content: center;
  gap: 30px;
}

.navbar a {
  color: white;
  text-decoration: none;
  font-weight: bold;
}

.navbar a:hover {
  text-decoration: underline;
}

/* Conteúdo principal */
main.content {
  margin-top: 30px;
  text-align: center;
}

/* Footer */
.footer {
  text-align: center;
  margin-top: 40px;
  padding: 10px 0;
  background-color: #eaeaea;
  font-size: 0.9em;
}
/* Página Home */
.home {
  text-align: center;
  padding: 20px;
}

.logo {
  width: 120px;
  margin-bottom: 10px;
}

.hero h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
}

.featured {
  margin-top: 40px;
}

.job-cards {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 20px;
  flex-wrap: wrap;
}

.card {
  background-color: white;
  border: 1px solid #ccc;
  padding: 15px;
  width: 250px;
  border-radius: 5px;
  box-shadow: 0 0 5px #ddd;
  text-align: left;
}

.actions {
  margin-top: 40px;
}

.btn {
  background-color: #0077B5;
  color: white;
  padding: 10px 20px;
  text-decoration: none;
  margin: 10px;
  border-radius: 5px;
  display: inline-block;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn:hover {
  background-color: #005f91;
  transform: scale(1.05);
}

.btn-secondary {
  background-color: #555;
}

.btn-secondary:hover {
  background-color: #333;
  transform: scale(1.05);
}


.btn-secondary {
  background-color: #555;
}
.oportunidades {
  padding: 20px;
}

.oportunidades h1 {
  text-align: center;
  margin-bottom: 20px;
}

.filters {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 30px;
  flex-wrap: wrap;
}

.filters label {
  font-weight: bold;
  font-size: 0.95rem;
}

.filters select {
  margin-left: 10px;
  padding: 5px;
}

.job-cards {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.job-details {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.job-details h1 {
  text-align: center;
  margin-bottom: 20px;
}

.job-meta p {
  margin: 5px 0;
}

.job-description h2,
.job-description h3 {
  margin-top: 20px;
}

.job-description ul {
  margin-left: 20px;
  list-style-type: disc;
}

.apply {
  text-align: center;
  margin-top: 30px;
}
