  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.job-details h1 {
  text-align: center;
  margin-bottom: 20px;
}

.job-meta p {
  margin: 5px 0;
}

.job-description h2,
.job-description h3 {
  margin-top: 20px;
}

.job-description ul {
  margin-left: 20px;
  list-style-type: disc;
}

.apply {
  text-align: center;
  margin-top: 30px;
}
.btn-small {
  font-size: 0.9rem;
  padding: 6px 14px;
  margin-top: 10px;
  display: inline-block;
}
.form-page {
  max-width: 500px;
  margin: 0 auto;
  padding: 20px;
}

.form-page h1 {
  text-align: center;
  margin-bottom: 20px;
}

.form-box {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.form-box label {
  font-weight: bold;
  display: flex;
  flex-direction: column;
}

.form-box input,
.form-box select {
  padding: 8px;
  font-size: 1rem;
  margin-top: 5px;
}
.about-page {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.about-page h1 {
  text-align: center;
  margin-bottom: 20px;
}

.about-text p {
  margin-bottom: 15px;
  line-height: 1.6;
}

.about-image {
  text-align: center;
  margin-top: 20px;
}

.map-img {
  max-width: 100%;
  height: auto;
  border: 1px solid #ccc;
}
.form-box textarea {
  padding: 8px;
  font-size: 1rem;
  resize: vertical;
  margin-top: 5px;
}
@media (max-width: 768px) {
  /* NAVBAR: de horizontal para vertical */
  .navbar ul {
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  /* CONTAINER CENTRAL DE FORMULÁRIOS */
  .form-page {
    padding: 10px;
    margin: 0 15px;
  }

  /* FORM INPUTS EM TELAS MENORES */
  .form-box input,
  .form-box select,
  .form-box textarea {
    font-size: 1rem;
    width: 100%;
  }

  /* BOTÕES */
  .btn, .btn-secondary {
    width: 100%;
    padding: 12px;
  }

  /* CARDS DE VAGA */
  .job-cards {
    flex-direction: column;
    align-items: center;
  }

  .card {
    width: 90%;
    margin-bottom: 20px;
  }

  /* IMAGEM DO MAPA */
  .map-img {
    width: 100%;
    max-width: 100%;
  }
}
.nav-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px;
}

.nav-logo {
  height: 40px;
}

.navbar ul {
  list-style: none;
  display: flex;
  gap: 25px;
}
